<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <section class="pre-header">
      <% if session[:user_id] %>
        <p>Hello, <%= current_user.email %>!</p>
      <% end %>
    </section>
    <header>
      <h1>RAIN<span>FOREST</span></h1>
        <nav class="main-nav">
          <ul>
            <li><%= link_to("Home", root_url) %></li>
            <li><%= link_to("All Products", products_path) %></li>
            <li><%= link_to("Add a Product", "/products/new") %></li>
            <% if session[:user_id] %>
              <li><%= link_to("Logout", sessions_path, method: :delete) %></li>
            <% else %>
              <li><%= link_to("Add Account", new_users_path) %></li>
              <li><%= link_to("Sign In", new_sessions_url) %></li>
            <% end %>
          </ul>
        </nav>
    </header>
    <% if flash[:notice] %>
      <p class="notice"><%= flash[:notice] %></p>
    <% end %>
    <% if flash[:alert] %>
      <p class="alert"><%= flash[:alert] %></p>
    <% end %>

    <%= yield %>
  </body>
</html>
