
<h1><%= @product.name %></h1>
<p><%= link_to "Edit Product", edit_product_path(@product) %> | <%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete this product?" } %> </p>
<p><img src="<%= @product.url %>"></p>
<p><%= @product.description %></p>
<p><%= @product.price_in_dollars %></p>

<h2>Product Reviews</h2>
<%= render '/reviews/reviews', review: @review %>


<h4>New Review</h4>
<%= render '/reviews/form', review: @review %>
