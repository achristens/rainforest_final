<main>
  <section class="product-summary">
    <div class="product-image">
      <img src="<%= @product.url %>">
    </div>
    <div class="product-details">
      <h2><%= @product.name %></h2>
      <p><%= link_to "Edit Product", edit_product_path(@product) %> | <%= link_to "Delete", product_path(@product), method: :delete, data: {confirm: "Are you sure you want to delete this product?" } %> </p>
      <p><%= @product.price_in_dollars %></p>
      <p class="description"><%= @product.description %></p>
    </div>
  </section>

  <section class="product-reviews">
    <div class="all-reviews">
      <h2>Product Reviews</h2>
      <%= render '/reviews/reviews', review: @review %>
    </div>
    <div class="add-review">
      <h2>New Review</h2>
      <% if session[:user_id] %>
        <%= render '/reviews/form', review: @review %>
      <% else %>
        <p>You must logged in to leave a review. Sign in or create an account below</p>
        <li><%= link_to("Add Account", new_users_path) %></li>
        <li><%= link_to("Sign In", new_sessions_url) %></li>
      <% end %>
    </div>
  </section>
</main>
